<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="8dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="8dp"
    tools:context="ru.velbloki.lukimeteo.MainActivity">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="1"
        android:rowCount="1"
        android:paddingLeft="0dp"
        android:paddingRight="0dp">
        <ImageView
            android:id="@+id/static_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_static_bg" />
        <ImageView
            android:id="@+id/sun_moon_rise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_full_sun" />
        <ImageView
            android:id="@+id/wind_direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_arrow" />
        <ImageView
            android:id="@+id/logo_t"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_logo_t" />
        <ImageView
            android:id="@+id/forecast_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_full_sun" />
        <TextView
            android:id="@+id/temp_fact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textSize="40sp" />
        <TextView
            android:id="@+id/wind_direction_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_gravity="center"
            android:textColor="#c6190e"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/forecast_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/rise_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_gravity="center"
            android:textColor="#c6190e"
            android:textSize="18sp" />
    </GridLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="7"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:rowCount="6">

        <ImageView
            android:id="@+id/sun_moon_up"
            android:layout_width="54dp"
            android:layout_height="50dp"
            android:layout_column="0"
            android:layout_row="0"
            app:srcCompat="@drawable/ic_sun_up" />


        <ImageView
            android:id="@+id/sun_moon_down"
            android:layout_width="54dp"
            android:layout_height="50dp"
            android:layout_column="6"
            android:layout_row="0"
            app:srcCompat="@drawable/ic_sun_down" />
        <TextView
            android:id="@+id/when_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:textColor="#c6190e" />
        <TextView
            android:id="@+id/when_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="5"
            android:layout_row="0"
            android:textColor="#c6190e" />
        <ImageView
            android:layout_height="24dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            app:srcCompat="@drawable/ic_hum" />
        <ImageView
            android:layout_height="24dp"
            android:layout_row="3"
            android:layout_column="5"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            app:srcCompat="@drawable/ic_press" />
        <TextView
            android:id="@+id/humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            android:layout_row="4"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#c6190e" />
        <TextView
            android:id="@+id/wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            android:layout_row="4"
            android:gravity="center"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="#c6190e" />
        <TextView
            android:id="@+id/pressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="5"
            android:layout_columnSpan="2"
            android:textSize="20sp"
            android:layout_gravity="fill_horizontal"
            android:gravity="center"
            android:layout_row="4"
            android:textColor="#c6190e" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="5"
            android:layout_columnSpan="2"
            android:textSize="10sp"
            android:layout_gravity="fill_horizontal"
            android:gravity="center"
            android:layout_row="5"
            android:text="@string/pressure_metric"
            android:textColor="#c6190e" />
    </GridLayout>
</RelativeLayout>
